<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.donadonation.bandwidth.ui.BandwidthViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.BandwidthActivity">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            style="@style/Widget.MaterialComponents.CircularProgressIndicator"
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="@id/last_updated"
            app:layout_constraintEnd_toStartOf="@id/last_updated"
            app:layout_constraintTop_toTopOf="@id/last_updated" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/last_updated"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:text="@string/last_updated_d_ago"
            app:layout_constraintEnd_toEndOf="@id/tv_network_condition_label"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_upload_speed_label"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16dp"
            android:text="@string/upload_speed"
            app:layout_constraintBottom_toTopOf="@id/btn_upload_speed_value"
            app:layout_constraintEnd_toStartOf="@id/tv_download_speed_label"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:clickable="false"
            android:id="@+id/btn_upload_speed_value"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/outline_upload_24"
            app:layout_constraintBottom_toBottomOf="@id/parent_top"
            app:layout_constraintEnd_toEndOf="@id/tv_upload_speed_label"
            app:layout_constraintStart_toStartOf="@id/tv_upload_speed_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_download_speed_label"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16dp"
            android:text="@string/download_speed"
            app:layout_constraintBottom_toTopOf="@id/btn_download_speed_value"
            app:layout_constraintEnd_toStartOf="@id/tv_network_condition_label"
            app:layout_constraintStart_toEndOf="@id/tv_upload_speed_label" />


        <com.google.android.material.button.MaterialButton
            android:clickable="false"
            android:id="@+id/btn_download_speed_value"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/outline_download_24"
            app:layout_constraintBottom_toBottomOf="@id/parent_top"
            app:layout_constraintEnd_toEndOf="@id/tv_download_speed_label"
            app:layout_constraintStart_toStartOf="@id/tv_download_speed_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_network_condition_label"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16dp"
            android:text="@string/network_condition"
            app:layout_constraintBottom_toTopOf="@id/btn_network_condition_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_download_speed_label" />

        <com.google.android.material.button.MaterialButton
            android:clickable="false"
            android:id="@+id/btn_network_condition_value"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/parent_top"
            app:layout_constraintEnd_toEndOf="@id/tv_network_condition_label"
            app:layout_constraintStart_toStartOf="@id/tv_network_condition_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/parent_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".3"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loader"
            style="@style/Widget.MaterialComponents.CircularProgressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/parent_top" />

        <com.anychart.AnyChartView
            android:id="@+id/line_chart_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0dp"
            app:layout_constraintDimensionRatio="w,3:4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/parent_top" />


        <com.google.android.material.button.MaterialButton
            style="?materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.prepareChartData()}"
            android:text="@string/view"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_chart_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_empty_view"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_data_to_show"
            app:layout_constraintBottom_toBottomOf="@id/line_chart_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/parent_top"
            tools:text="@string/no_data_to_show" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>